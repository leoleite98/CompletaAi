<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/textViewGasolinaKm1Real"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="28dp"
        android:text="TextView"
        android:textColor="#f44242"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewEtanolKm1Real"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTxtKm1Real" />

    <TextView
        android:id="@+id/textViewTxtKm1Real"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="12dp"
        android:text="Quantos KM você anda por R$ 1,00"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewEtanolKm1Real"
        app:layout_constraintStart_toStartOf="@+id/textViewResultado"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultado" />

    <TextView
        android:id="@+id/textViewTxtCompletaAiCom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="97dp"
        android:layout_marginBottom="17dp"
        android:text="Completa aí com"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewResultado"
        app:layout_constraintStart_toStartOf="@+id/textViewResultado"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="13dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewTxtKm1Real"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTxtCompletaAiCom" />

    <TextView
        android:id="@+id/textViewTxtEconomia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="22dp"
        android:text="Quantos R$ você economiza em 1Km"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewEconomia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEtanolKm1Real" />

    <TextView
        android:id="@+id/textViewEtanolKm1Real"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:text="TextView"
        android:textColor="#30a532"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewTxtEconomia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewGasolinaKm1Real"
        app:layout_constraintTop_toBottomOf="@+id/textViewTxtKm1Real" />

    <TextView
        android:id="@+id/textViewEconomia"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="34dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="#4286f4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTxtEconomia" />

</android.support.constraint.ConstraintLayout>